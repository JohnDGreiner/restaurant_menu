<p id="notice"><%= notice %></p>

<h1>Listing Dishes</h1>


<table>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <% if dish.course_id == course.id %>
        <tr>
          <td><%= link_to dish.name, edit_dish_path(dish) %></td>
          <td><%= dish.description %></td>
          <td><%= dish.price %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
</tr>
</table>

<div> <%= link_to 'New dish', new_dish_path %> </div>

  <% end %>
