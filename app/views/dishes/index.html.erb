<p id="notice"><%= notice %></p>

<h1>Listing Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= link_to dish.name, edit_dish_path(dish) %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Dish', new_dish_path %>
